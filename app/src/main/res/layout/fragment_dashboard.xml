<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context="DashboardFragment">

    <FrameLayout
        android:id="@+id/cover_top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cover"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="6">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/back_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white"
                    android:layout_gravity="start"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                >
                <ImageView
                    android:id="@+id/edit_db"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic__edit"
                    app:tint="@color/white"
                    android:layout_gravity="end"
                    />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/complete_edit_db"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check"
                    app:tint="@color/white"
                    android:layout_gravity="end"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/delete_in_db"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_1"
                    app:tint="@color/white"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/cancel_edit_db"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel"
                    app:tint="@color/white"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame_name_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cover_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        >

        <EditText
            android:focusable="false"
            android:id="@+id/edt_name_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồ án CNPM"
            android:fontFamily="@font/roboto_bold"
            android:background="@android:color/transparent"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:inputType="textMultiLine|textNoSuggestions"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/coop_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/frame_name_db"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:weightSum="6"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Thành viên"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:id="@+id/edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="@drawable/bg_item_user"
                    android:fontFamily="@font/roboto_light"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Nhãn"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/label_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_cover_item_dashboard"
                android:text="Môn học"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coop_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Mô tả"
            android:fontFamily="@font/roboto_medium"
            android:textSize="22dp"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:focusable="false"
                android:id="@+id/tv_description_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thêm mô tả"
                android:text="@string/expand"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine|textNoSuggestions"
                />
            <EditText
                android:visibility="gone"
                android:id="@+id/edt_description_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thêm mô tả"
                android:text="@string/expand"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine|textNoSuggestions"
                />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Công việc"
            android:fontFamily="@font/roboto_medium"
            android:textSize="22dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_add"
        app:elevation="1dp"
        app:backgroundTint="@color/yellow_primary"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp"
        app:tint="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>